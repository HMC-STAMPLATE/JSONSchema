{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "SensorProperty",
  "description": "The JSON object of the `properties` property of an OGC STA `Sensor` entity.",
  "type": "object",
  "$defs": {
    "url": {
      "type": "string",
      "pattern": "^https*://"
    },
    "organization": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "Organization"
        },
        "name": {
          "type": "string"
        },
        "identifier": {
          "$ref": "#/$defs/url"
        }
      },
      "required": ["@type", "name"]
    }
  },
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "@version": {
          "type": "number",
          "const": 1.1
        },
        "@import": {
          "type": "string"
        },
        "@vocab": {
          "type": "string",
          "const": "http://schema.org/"
        }
      },
      "required": ["@version", "@import", "@vocab"]
    },
    "@id": {
      "$ref": "#/$defs/url"
    },
    "@type": {
      "type": "string",
      "const": "SensorProperties"
    },
    "identifier": {
      "$ref": "#/$defs/url"
    },
    "isVariantOf": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "ProductGroup"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["@type", "name"]
    },
    "model": {
      "type": "string"
    },
    "manufacturer": {
      "$ref": "#/$defs/organization"
    },
    "serialNumber": {
      "type": "string"
    },
    "responsiblePersons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "const": "Role"
          },
          "roleName": {
            "type": "string"
          },
          "responsiblePersons": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "@id": {
                  "$ref": "#/$defs/url"
                },
                "@type": {
                  "type": "string",
                  "const": "Person"
                },
                "givenName": {
                  "type": "string"
                },
                "familyName": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "affiliation": {
                  "$ref": "#/$defs/organization"
                },
                "identifier": {
                  "$ref": "#/$defs/url"
                }
              },
              "required": ["@type", "givenName", "familyName", "affiliation"]
            }
          }
        },
        "required": ["@type", "roleName", "responsiblePersons"]
      }
    }
  },
  "required": ["@context", "@id", "@type", "responsiblePersons"]
}
