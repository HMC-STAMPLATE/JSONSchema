{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "SensorProperty",
  "description": "The JSON object of the `properties` property of an OGC STA `Sensor` entity.",
  "type": "object",
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "@version": {
          "type": "number",
          "const": 1.1
        },
        "@import": {
          "type": "string"
        },
        "@vocab": {
          "type": "string",
          "const": "http://schema.org/"
        }
      }
    },
    "@id": {
      "type": "string",
      "pattern": "^https*://"
    },
    "@type": {
      "type": "string",
      "const": "SensorProperties"
    },
    "identifier": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "productID": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "manufacturer": {
      "type": "string"
    },
    "serialNumber": {
      "type": "string"
    },
    "responsiblePersons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "const": "Role"
          },
          "roleName": {
            "type": "string"
          },
          "responsiblePersons": {
            "type": "object",
            "properties": {
              "@id": {
                "type": "string",
                "pattern": "^https*://"
              },
              "@type": {
                "type": "string",
                "const": "Person"
              },
              "givenName": {
                "type": "string"
              },
              "familyName": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "affiliation": {
                "type": "object",
                "properties": {
                  "@type": {
                    "type": "string",
                    "const": "Organization"
                  },
                  "name": {
                    "type": "string"
                  },
                  "identifier": {
                    "type": "string"
                  }
                }
              },
              "identifier": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
