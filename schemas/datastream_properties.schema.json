{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "DatastreamProperties",
  "description": "The JSON object of the `properties` property of an OGC STA `DataStream` entity.",
  "type": "object",
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "@version": {
          "type": "number",
          "const": 1.1
        },
        "@import": {
          "type": "string"
        },
        "@vocab": {
          "type": "string",
          "const": "http://schema.org/"
        }
      },
      "required": [
        "@version",
        "@import",
        "@vocab"
      ]
    },
    "@id": {
      "$ref": "#/$defs/url"
    },
    "@type": {
      "type": "string",
      "const": "DatastreamProperties"
    },
    "observingProcedure": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "ObservingProcedure"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "definition": {
          "type": "string",
          "pattern": "^$|^https*://"
        },
        "properties": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "const": "ObservingProcedureProperties"
            },
            "period": {
              "type": "number"
            },
            "periodUom": {
              "$ref": "#/$defs/unitOfMeasurement"
            },
            "function": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "@type",
        "name"
      ]
    },
    "measurementProperties": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "MeasurementProperties"
        },
        "measurementPrecision": {
          "type": "number"
        },
        "measurementPrecisionUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "measurementFrequency": {
          "type": "number"
        },
        "measurementFrequencyUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "measurementDepth": {
          "type": "number"
        },
        "measurementDepthUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "operationTemperature": {
          "type": "number"
        },
        "operationTemperatureUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "operationRange": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "operationRangeUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "measurementResolution": {
          "type": "number"
        },
        "measurementResolutionUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "measurementDrift": {
          "type": "number"
        },
        "measurementDriftUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "manufacturerRange": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "manufacturerRangeUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "measurementAccuracy": {
          "type": "number"
        },
        "measurementAccuracyUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "gradientThreshold": {
          "type": "number"
        },
        "gradientThresholdUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "spikeThreshold": {
          "type": "number"
        },
        "spikeThresholdUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "capacitance": {
          "type": "number"
        },
        "capacitanceUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "resistance": {
          "type": "number"
        },
        "resistanceUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "sensitivity": {
          "type": "number"
        },
        "sensitivityUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "polarity": {
          "type": "number"
        },
        "polarityUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "normalisationFactor": {
          "type": "number"
        },
        "poles": {
          "type": "number"
        },
        "polesUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "zeros": {
          "type": "number"
        },
        "zerosUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        },
        "maximumDepthDeployment": {
          "type": "number"
        },
        "maximumDepthDeploymentUom": {
          "$ref": "#/$defs/unitOfMeasurement"
        }
      }
    },
    "license": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "CreativeWork"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "$ref": "#/$defs/url"
        },
        "responsibleParty": {
          "anyOf": [
            {
              "$ref": "#/$defs/organization"
            },
            {
              "type": "object",
              "properties": {
                "@id": {
                  "$ref": "#/$defs/url"
                },
                "@type": {
                  "type": "string",
                  "const": "Person"
                },
                "givenName": {
                  "type": "string"
                },
                "familyName": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "pattern": "^\\S+@\\S+\\.\\S+$",
                  "minLength": 6
                },
                "affiliation": {
                  "$ref": "#/$defs/organization"
                },
                "identifier": {
                  "$ref": "#/$defs/url"
                }
              }
            }
          ]
        }
      },
      "required": [
        "@type",
        "name"
      ]
    },
    "providerMobility": {
      "type": "string",
      "enum": [
        "static",
        "dynamic",
        "profiling"
      ]
    },
    "deployment": {
      "type": "object",
      "properties": {
        "@id": {
          "$ref": "#/$defs/url"
        },
        "@type": {
          "type": "string",
          "const": "Deployment"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "deploymentTime": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "const": "DeploymentProperties"
            },
            "offsets": {
              "type": "object",
              "properties": {
                "@type": {
                  "type": "string",
                  "const": "Offset"
                },
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "z": {
                  "type": "number"
                }
              }
            },
            "offsetsUom": {
              "$ref": "#/$defs/unitOfMeasurement"
            }
          }
        }
      }
    }
  },
  "required": [
    "@context",
    "@type",
    "@id"
  ],
  "$defs": {
    "url": {
      "type": "string",
      "pattern": "^https*://"
    },
    "organization": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "Organization"
        },
        "name": {
          "type": "string"
        },
        "identifier": {
          "type": "string",
          "pattern": "^https*://"
        }
      },
      "required": [
        "@type",
        "name"
      ]
    },
    "continuesRelationRole": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "RelationRole"
        },
        "name": {
          "type": "string",
          "const": "continues"
        },
        "definition": {
          "type": "string",
          "const": "https://support.datacite.org/docs/connecting-to-works"
        },
        "inverseName": {
          "type": "string",
          "const": "isContinuedBy"
        },
        "inverseDefinition": {
          "type": "string",
          "const": "https://support.datacite.org/docs/connecting-to-works"
        }
      },
      "required": [
        "@type",
        "name",
        "definition"
      ]
    },
    "unitOfMeasurement": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "UnitOfMeasurement"
        },
        "code": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        }
      },
      "required": [
        "@type",
        "code",
        "label",
        "symbol"
      ]
    }
  }
}
