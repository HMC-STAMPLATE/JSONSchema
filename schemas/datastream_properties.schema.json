{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "DatastreamProperties",
  "description": "The JSON object of the `properties` property of an OGC STA `DataStream` entity.",
  "type": "object",
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "@version": {
          "type": "number",
          "const": 1.1
        },
        "@import": {
          "type": "string"
        },
        "@vocab": {
          "type": "string",
          "const": "http://schema.org/"
        }
      },
      "required": [
        "@version",
        "@import",
        "@vocab"
      ]
    },
    "@id": {
      "$ref": "#/$defs/url"
    },
    "@type": {
      "type": "string",
      "const": "DatastreamProperties"
    },
    "observingProcedure": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "ObservingProcedure"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "definition": {
          "type": "string",
          "pattern": "^$|^https*://"
        },
        "properties": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "const": "ObservingProcedureProperties"
            },
            "period": {
              "type": "number"
            },
            "periodUom": {
              "type": "string"
            },
            "function": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "@type",
        "name"
      ]
    },
    "measurementProperties": {
      "type": "object"
    },
    "license": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "CreativeWork"
        },
        "name": {
          "type": "string"
        },
        "url": {
          "$ref": "#/$defs/url"
        },
        "responsibleParty": {
          "anyOf": [
            {
              "$ref": "#/$defs/organization"
            },
            {
              "type": "object",
              "properties": {
                "@id": {
                  "$ref": "#/$defs/url"
                },
                "@type": {
                  "type": "string",
                  "const": "Person"
                },
                "givenName": {
                  "type": "string"
                },
                "familyName": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "pattern": "^\\S+@\\S+\\.\\S+$",
                  "minLength": 6
                },
                "affiliation": {
                  "$ref": "#/$defs/organization"
                },
                "identifier": {
                  "$ref": "#/$defs/url"
                }
              }
            }
          ]
        }
      },
      "required": [
        "@type",
        "name"
      ]
    },
    "providerMobility": {
      "type": "string",
      "enum": [
        "static",
        "dynamic",
        "profiling"
      ]
    },
    "deployment": {
      "type": "object",
      "properties": {
        "@id": {
          "$ref": "#/$defs/url"
        },
        "@type": {
          "type": "string",
          "const": "Deployment"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "atDepth": {
          "type": "number"
        },
        "depthUom": {
          "type": "string"
        },
        "deploymentTime": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "const": "DeploymentProperties"
            },
            "offsets": {
              "type": "object",
              "properties": {
                "@type": {
                  "type": "string",
                  "const": "Offset"
                },
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "z": {
                  "type": "number"
                }
              }
            },
            "offsetsUom": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "@context",
    "@type",
    "@id"
  ],
  "$defs": {
    "url": {
      "type": "string",
      "pattern": "^https*://"
    },
    "organization": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "Organization"
        },
        "name": {
          "type": "string"
        },
        "identifier": {
          "type": "string",
          "pattern": "^https*://"
        }
      },
      "required": [
        "@type",
        "name"
      ]
    }
  }
}
