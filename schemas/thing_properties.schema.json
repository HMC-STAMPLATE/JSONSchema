{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "ThingProperty",
  "description": "The JSON object of the `properties` property of an OGC STA `Thing` entity.",
  "type": "object",
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "@version": {
          "type": "number",
          "const": 1.1
        },
        "@import": {
          "type": "string"
        },
        "@vocab": {
          "type": "string",
          "const": "http://schema.org/"
        }
      }
    },
    "@id": {
      "type": "string",
      "pattern": "^https*://"
    },
    "@type": {
      "type": "string",
      "const": "ThingProperties"
    },
    "identifier": {
      "type": "string",
      "pattern": "|^https*://"
    },
    "providerMobility": {
      "type": "string",
      "enum": ["static", "dynamic"]
    },
    "status": {
      "type": "string"
    },
    "responsiblePersons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "const": "Role"
          },
          "roleName": {
            "type": "string"
          },
          "responsiblePersons": {
            "type": "object",
            "properties": {
              "@id": {
                "type": "string",
                "pattern": "^https*://"
              },
              "@type": {
                "type": "string",
                "const": "Person"
              },
              "givenName": {
                "type": "string"
              },
              "familyName": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "affiliation": {
                "type": "object",
                "properties": {
                  "@type": {
                    "type": "string",
                    "const": "Organization"
                  },
                  "name": {
                    "type": "string"
                  },
                  "identifier": {
                    "type": "string",
                    "pattern": "|^https*://"
                  }
                }
              },
              "identifier": {
                "type": "string",
                "pattern": "|^https*://"
              }
            }
          }
        }
      }
    },
    "involvedOrganizations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "const": "Organization"
          },
          "name": {
            "type": "string"
          },
          "identifier": {
            "type": "string",
            "pattern": "|^https*://"
          }
        }
      }
    },
    "partOfProjects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "const": "ResearchProject"
          },
          "name": {
            "type": "string"
          }
        }
      }
    },
    "dataset": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "Dataset"
        },
        "encodingFormat": {
          "type": "string"
        },
        "distribution": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "const": "DataDownload"
            },
            "url": {
              "type": "string",
              "pattern": "^https*://"
            }
          }
        }
      }
    }
  }
}
