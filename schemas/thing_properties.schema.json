{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "ThingProperties",
  "description": "The JSON object of the `properties` property of an OGC STA `Thing` entity.",
  "type": "object",
  "properties": {
    "@context": {
      "type": "object",
      "properties": {
        "@version": {
          "type": "number",
          "const": 1.1
        },
        "@import": {
          "type": "string"
        },
        "@vocab": {
          "type": "string",
          "const": "http://schema.org/"
        }
      },
      "required": [
        "@version",
        "@import",
        "@vocab"
      ]
    },
    "@id": {
      "$ref": "#/$defs/url"
    },
    "@type": {
      "type": "string",
      "const": "ThingProperties"
    },
    "identifier": {
      "type": "string",
      "pattern": "^$|^https*://"
    },
    "sourceRelatedThings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@id": {
            "$ref": "#/$defs/url"
          },
          "@type": {
            "type": "string",
            "const": "StaRelatedThing"
          },
          "externalTarget": {
            "type": "string"
          },
          "relationRole": {
            "$ref": "#/$defs/containedInPlaceRelationRole"
          }
        },
        "required": [
          "@id",
          "@type",
          "relationRole"
        ]
      }
    },
    "responsiblePersons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "const": "Role"
          },
          "roleName": {
            "type": "string"
          },
          "responsiblePersons": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "@id": {
                  "$ref": "#/$defs/url"
                },
                "@type": {
                  "type": "string",
                  "const": "Person"
                },
                "givenName": {
                  "type": "string"
                },
                "familyName": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "pattern": "^\\S+@\\S+\\.\\S+$",
                  "minLength": 6
                },
                "affiliation": {
                  "$ref": "#/$defs/organization"
                },
                "identifier": {
                  "type": "string",
                  "pattern": "^$|^https*://"
                }
              },
              "required": [
                "@type",
                "givenName",
                "familyName",
                "affiliation"
              ]
            }
          }
        },
        "required": [
          "@type",
          "roleName",
          "responsiblePersons"
        ]
      }
    },
    "partOfProjects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string",
            "const": "ResearchProject"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "@type",
          "name"
        ]
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "Dataset"
        },
        "encodingType": {
          "type": "string",
          "enum": [
            "application/pdf",
            "http://www.opengis.net/doc/IS/SensorML/2.0",
            "text/html"
          ]
        },
        "distribution": {
          "type": "object",
          "properties": {
            "@type": {
              "type": "string",
              "const": "DataDownload"
            },
            "url": {
              "$ref": "#/$defs/url"
            }
          },
          "required": [
            "@type",
            "url"
          ]
        },
        "text": {
          "type": "string"
        }
      },
      "required": [
        "@type",
        "encodingType"
      ],
      "oneOf": [
        {
          "required": [
            "distribution"
          ]
        },
        {
          "required": [
            "text"
          ]
        }
      ]
    }
  },
  "required": [
    "@context",
    "@id",
    "@type",
    "responsiblePersons"
  ],
  "$defs": {
    "url": {
      "type": "string",
      "pattern": "^https*://"
    },
    "organization": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "Organization"
        },
        "name": {
          "type": "string"
        },
        "identifier": {
          "type": "string",
          "pattern": "^$|^https*://"
        }
      },
      "required": [
        "@type",
        "name"
      ]
    },
    "containedInPlaceRelationRole": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string",
          "const": "StaRelationRole"
        },
        "name": {
          "type": "string",
          "const": "containedInPlace"
        },
        "definition": {
          "type": "string",
          "const": "https://schema.org/containedInPlace"
        },
        "inverseName": {
          "type": "string",
          "const": "containsPlace"
        },
        "inverseDefinition": {
          "type": "string",
          "const": "https://schema.org/containsPlace"
        }
      },
      "required": [
        "@type",
        "name",
        "definition"
      ]
    }
  }
}
